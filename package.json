{
  "name": "writing",
  "description": "Personal blog",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "export": "next export",
    "format": "npm run prettier -- \"{src,posts,public}/**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "postbuild": "ts-node --files src/scripts/feed.ts",
    "start": "next start",
    "typecheck": "tsc",
    "prettier": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blakeembrey/writing.git"
  },
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yml,yaml}": "npm run prettier"
  },
  "dependencies": {
    "date-fns": "^2.14.0",
    "globby": "^11.0.0",
    "gray-matter": "4.0.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-free-style": "^11.1.0",
    "remark": "^12.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.2",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "^1.9.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "fdir": "^5.0.0",
    "feed": "^4.2.0",
    "next": "^10.0.5",
    "prettier": "^2.0.5",
    "ts-node": "^9.1.1"
  }
